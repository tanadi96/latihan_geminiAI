# Auto detect text files and perform LF normalization
* text=auto

# JS files should use LF
*.js text eol=lf
*.jsx text eol=lf
*.ts text eol=lf
*.tsx text eol=lf

# JSON files should use LF
*.json text eol=lf

# Config files should use LF
*.yml text eol=lf
*.yaml text eol=lf
*.config.* text eol=lf
.env* text eol=lf
.git* text eol=lf

# Documentation
*.md text eol=lf
*.txt text eol=lf

# Dependencies
package.json text eol=lf
package-lock.json text eol=lf
